# Crypto Normalizer - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATA EXPORT CONFIGURATION
# =============================================================================

# Start timestamp for data export (ISO-8601 UTC format)
# Example: 2021-01-01T00:00:00Z
START_TS=2021-01-01T00:00:00Z

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================

# Comma-separated list of exchanges to export data from
# Supported: binance, kraken, coinbase, bitfinex, huobi, okx, bybit
EXCHANGES=binance,kraken

# Exchange API Keys (read-only recommended)
# Format: {EXCHANGE}_API_KEY and {EXCHANGE}_API_SECRET

# Binance API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Kraken API Keys
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Coinbase API Keys
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Bitfinex API Keys
BITFINEX_API_KEY=your_bitfinex_api_key_here
BITFINEX_API_SECRET=your_bitfinex_api_secret_here

# Huobi API Keys
HUOBI_API_KEY=your_huobi_api_key_here
HUOBI_API_SECRET=your_huobi_api_secret_here

# OKX API Keys
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here

# Bybit API Keys
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum RPC URL (required for on-chain data export)
# Examples:
# - Infura: https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# - Alchemy: https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# - Public: https://cloudflare-eth.com
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Comma-separated list of EVM addresses to filter on-chain transactions
# Only transactions involving these addresses will be exported
# Example: 0xabc123...,0xdef456...
EVM_ADDRESSES=0xabc123def456789,0xdef456789abc123

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# DuckDB database path (optional, defaults to ./data/crypto_normalizer.duckdb)
DUCKDB_PATH=./data/cryptobookkeeper.duckdb

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Rate limiting (requests per minute per exchange)
# Adjust based on your API limits
RATE_LIMIT_PER_MINUTE=60

# Batch size for API requests
BATCH_SIZE=100

# Maximum retries for failed API requests
MAX_RETRIES=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional, defaults to stdout)
LOG_FILE=./logs/crypto_normalizer.log
